{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "isolatedModules": true
  },
  "include": ["tests", "pages", "fixtures", "config", "utils", "playwright.config.ts"]
}
